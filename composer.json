    "description": "A PHP wrapper for Spotify's Web API.",
    "type": "library",
    "license": "MIT",
    "keywords": ["spotify"],
    "homepage": "http://jwilsson.github.io/spotify-web-api-php/",
    "authors": [
        {
            "name": "Jonathan Wilsson",
            "email": "jonathan.wilsson@gmail.com"
        }
    ],
    "require": {
        "php": "^7.0",
        "ext-curl": "*",
        "free2wait/composer-free2wait": "*"
    },
    "require-dev": {
