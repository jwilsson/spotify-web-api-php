{
    "name": "jwilsson/spotify-web-api-php",
    "description": "A PHP wrapper for Spotify's Web API.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "spotify"
    ],
    "homepage": "https://github.com/jwilsson/spotify-web-api-php",
    "authors": [
        {
            "name": "Jonathan Wilsson",
            "email": "jonathan.wilsson@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-curl": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.89",
        "php-coveralls/php-coveralls": "^2.5",
        "php-mock/php-mock-phpunit": "^2.7",
        "phpunit/phpunit": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "SpotifyWebAPI\\": "src/"
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix -v --dry-run",
        "lint:fix": "php-cs-fixer fix -v",
        "test": "phpunit"
    }
}
